	<parameter name="id_pedido" class="java.lang.Integer"/>
	<query language="SQL"><![CDATA[SELECT pr.nome, po.tamanho, pe.valor, t.valor_total
FROM Prato pr INNER JOIN Pedido pe
ON pr.id = pe.id_prato
INNER JOIN Porcao po
ON po.id = pe.id_porcao
JOIN (SELECT id, SUM(valor) AS valor_total
      FROM Pedido
      GROUP BY id) t ON pe.id = t.id
	  WHERE pe.id = $P{id_pedido}
      ORDER BY pe.id]]></query>
